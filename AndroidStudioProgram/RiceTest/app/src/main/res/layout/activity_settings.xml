<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.poornamith.ricetest.SettingsActivity">

    <EditText
        android:id="@+id/edit_text_l_lower"
        android:layout_width="121dp"
        android:layout_height="52dp"
        android:layout_marginLeft="191dp"
        android:layout_marginTop="-8dp"
        android:ems="10"
        android:hint="lower limit"
        android:inputType="number"
        android:text="25"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_text_l_upper" />

    <EditText
        android:id="@+id/edit_text_t_m_t"
        android:layout_width="121dp"
        android:layout_height="52dp"
        android:ems="10"
        android:hint="maximum value"
        android:inputType="number"
        android:text="255"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@+id/edit_text_t_t_v"
        android:layout_marginLeft="191dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Threshold"
        android:textSize="24sp"
        android:layout_marginTop="29dp"
        app:layout_constraintTop_toBottomOf="@+id/edit_text_e_k_s"
        android:layout_marginLeft="44dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="max threshold Value"
        android:layout_marginTop="29dp"
        app:layout_constraintTop_toBottomOf="@+id/textView13"
        android:layout_marginLeft="44dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <EditText
        android:id="@+id/edit_text_t_t_v"
        android:layout_width="121dp"
        android:layout_height="52dp"
        android:ems="10"
        android:hint="threshold value"
        android:inputType="number"
        android:text="200"
        android:layout_marginTop="46dp"
        app:layout_constraintTop_toBottomOf="@+id/edit_text_e_k_s"
        android:layout_marginLeft="191dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="threshold Value"
        android:layout_marginTop="22dp"
        app:layout_constraintTop_toBottomOf="@+id/textView11"
        android:layout_marginLeft="44dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <EditText
        android:id="@+id/edit_text_l_upper"
        android:layout_width="121dp"
        android:layout_height="52dp"
        android:ems="10"
        android:hint="upper limit"
        android:inputType="number"
        android:text="75"
        android:layout_marginLeft="191dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="49dp"
        app:layout_constraintTop_toBottomOf="@+id/edit_text_t_m_t" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Upper Limit"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/textView8"
        android:layout_marginLeft="44dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Limits"
        android:textSize="24sp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/edit_text_t_m_t"
        android:layout_marginLeft="44dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lower Limit"
        android:layout_marginLeft="44dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="17dp"
        app:layout_constraintTop_toBottomOf="@+id/textView10" />

    <EditText
        android:id="@+id/edit_text_e_k_s"
        android:layout_width="121dp"
        android:layout_height="52dp"
        android:ems="10"
        android:hint="Kernal Size"
        android:inputType="number"
        android:text="21"
        android:layout_marginLeft="191dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="26dp"
        app:layout_constraintTop_toBottomOf="@+id/edit_text_g_s_v" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Erode"
        android:textSize="24sp"
        android:layout_marginTop="9dp"
        app:layout_constraintTop_toBottomOf="@+id/edit_text_g_s_v"
        android:layout_marginLeft="44dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kernal Size"
        android:layout_marginTop="17dp"
        app:layout_constraintTop_toBottomOf="@+id/textView6"
        android:layout_marginLeft="44dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gaussian Blur"
        android:textSize="24sp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="44dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sigma Value"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        android:layout_marginLeft="44dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <EditText
        android:id="@+id/edit_text_g_s_v"
        android:layout_width="119dp"
        android:layout_height="52dp"
        android:ems="10"
        android:hint="Sigma value"
        android:inputType="number"
        android:text="1.5"
        android:layout_marginLeft="191dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="37dp" />

</android.support.constraint.ConstraintLayout>
