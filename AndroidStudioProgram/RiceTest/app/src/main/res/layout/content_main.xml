<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.poornamith.ricetest.MainActivity"
    tools:showIn="@layout/app_bar_main">

    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="%"
        app:layout_constraintTop_toTopOf="@+id/text_view_high"
        android:layout_marginTop="7dp"
        app:layout_constraintLeft_toRightOf="@+id/text_view_high"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="15dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0" />

    <ImageView
        android:id="@+id/image_view"
        android:layout_width="350dp"
        android:layout_height="196dp"
        app:srcCompat="@drawable/sample_image"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="25dp" />



    <Button
        android:id="@+id/button_browse"
        android:layout_width="163dp"
        android:layout_height="48dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="10dp"
        android:text="Browse"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_view" />

    <Button
        android:id="@+id/button_calc"
        android:layout_width="159dp"
        android:layout_height="49dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="9dp"
        android:elevation="0dp"
        android:text="Calculate"
        android:visibility="visible"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_view" />



    <!-- Result -->

    <TextView
        android:id="@+id/text_view"
        android:layout_width="74dp"
        android:layout_height="26dp"
        android:layout_marginLeft="31dp"
        android:layout_marginTop="25dp"
        android:text="Result -"
        android:textSize="24sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_browse" />

    <TextView
        android:id="@+id/text_view_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="9dp"
        android:layout_marginTop="15dp"
        android:text="0"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@+id/text_view"
        app:layout_constraintTop_toBottomOf="@+id/button_browse" />

    <TextView
        android:id="@+id/text_view_quality"
        android:layout_width="103dp"
        android:layout_height="32dp"
        android:layout_marginLeft="23dp"
        android:layout_marginTop="19dp"
        android:text=" "
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@+id/text_view_result"
        app:layout_constraintTop_toBottomOf="@+id/button_calc" />

    <TextView
        android:id="@+id/text_view2"
        android:layout_width="76dp"
        android:layout_height="wrap_content"
        android:text="quality"
        android:textSize="18sp"
        android:layout_marginTop="41dp"
        app:layout_constraintTop_toBottomOf="@+id/button_calc"
        app:layout_constraintLeft_toRightOf="@+id/text_view_result"
        android:layout_marginLeft="23dp" />

    <!-- Result classification -->

    <ImageView
        android:id="@+id/image_view2"
        android:layout_width="322dp"
        android:layout_height="39dp"
        app:srcCompat="@drawable/volume_levels"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="109dp"
        app:layout_constraintTop_toBottomOf="@+id/button_browse" />

    <TextView
        android:id="@+id/text_view_low"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize= "20sp"
        android:layout_marginLeft="31dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/image_view2"
        android:layout_marginTop="25dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0" />

    <TextView
        android:id="@+id/text_view_mid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize= "20sp"
        app:layout_constraintTop_toTopOf="@+id/image_view2"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/text_view_high"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize= "20sp"
        app:layout_constraintTop_toTopOf="@+id/image_view2"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="328dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="15dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.03" />

    <TextView
        android:id="@+id/text_view3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quality Analysis"
        android:textSize="18sp"
        android:layout_marginTop="36dp"
        app:layout_constraintTop_toBottomOf="@+id/text_view"
        android:layout_marginLeft="31dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/text_view_debug"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:text="-"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="16dp"
        android:layout_height="34dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="29dp"
        android:text="%"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@+id/text_view_result"
        app:layout_constraintTop_toBottomOf="@+id/button_browse" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="%"
        app:layout_constraintLeft_toRightOf="@+id/text_view_mid"
        android:layout_marginLeft="2dp"
        app:layout_constraintTop_toTopOf="@+id/text_view_mid"
        android:layout_marginTop="7dp" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="7dp"
        android:text="%"
        app:layout_constraintLeft_toRightOf="@+id/text_view_low"
        app:layout_constraintTop_toTopOf="@+id/text_view_low" />


</android.support.constraint.ConstraintLayout>
